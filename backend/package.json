{
  "name": "revealjs-social-presence-backend",
  "version": "1.0.0",
  "description": "Backend service for the reveal.js plugin social-presence",
  "author": "pantajoe",
  "private": false,
  "license": "MIT",
  "scripts": {
    "prebuild": "rimraf dist",
    "build": "nest build",
    "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
    "fix": "eslint \"{src,apps,libs,test,@types,db}/**/*.ts\" --fix",
    "start": "nest start",
    "start:dev": "nest start --watch",
    "start:debug": "nest start --debug 0.0.0.0:9229 --watch",
    "start:prod": "node dist/src/main",
    "lint": "eslint \"{src,apps,libs,test,@types,db}/**/*.ts\" --max-warnings=0",
    "typecheck": "tsc --noEmit",
    "console": "REPL=true nest start --entryFile repl",
    "nest-cli": "CLI=true ts-node -r tsconfig-paths/register --files --cwdMode --preferTsExts ./src/cli.ts",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk=0.0.0.0:9230 -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand --testTimeout 60000",
    "test:e2e": "jest --config ./test/support/config/jest-e2e.json",
    "test:e2e:debug": "node --inspect-brk=0.0.0.0:9230 -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand --config ./test/support/config/jest-e2e.json --testTimeout 60000"
  },
  "dependencies": {
    "@adminjs/express": "^5.0.1",
    "@adminjs/mikroorm": "^2.0.0",
    "@adminjs/nestjs": "^5.0.1",
    "@mikro-orm/cli": "^5.5.3",
    "@mikro-orm/core": "^5.5.3",
